# E2E3D Production Environment Configuration
# Copy this file to .env and modify as needed

#--------------------------------------------------------------------
# Docker Registry Settings
#--------------------------------------------------------------------
DOCKER_REGISTRY=localhost
IMAGE_TAG=latest

#--------------------------------------------------------------------
# MinIO Settings
#--------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

#--------------------------------------------------------------------
# PostgreSQL Settings
#--------------------------------------------------------------------
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

#--------------------------------------------------------------------
# Airflow Settings
#--------------------------------------------------------------------
# Generate a fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=
AIRFLOW_SECRET_KEY=temporary_key
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin

#--------------------------------------------------------------------
# Grafana Settings
#--------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

#--------------------------------------------------------------------
# Reconstruction Service Settings
#--------------------------------------------------------------------
# Set to true if GPU is available and should be used
USE_GPU=false
# Number of worker processes for reconstruction
MAX_WORKERS=4
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
# Enable Prometheus metrics collection
ENABLE_METRICS=true 