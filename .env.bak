# Environment configuration for 3D Reconstruction Pipeline

# Base paths
PROJECT_PATH=/opt/airflow/data
INPUT_PATH=/opt/airflow/data/input
OUTPUT_PATH=/opt/airflow/data/output
VIDEO_PATH=/opt/airflow/data/videos

# COLMAP configuration
COLMAP_PATH=/opt/homebrew/bin/colmap
USE_GPU=auto
QUALITY_PRESET=medium

# S3/MinIO configuration
S3_ENABLED=false
S3_ENDPOINT=http://minio:9000
S3_BUCKET=models
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Notification configuration
SLACK_WEBHOOK=
ENABLE_EMAIL=false
NOTIFICATION_EMAIL=

# Airflow user
AIRFLOW_UID=50000
AIRFLOW_USER_HOME=/opt/airflow
AIRFLOW_TEST_MODE=true
